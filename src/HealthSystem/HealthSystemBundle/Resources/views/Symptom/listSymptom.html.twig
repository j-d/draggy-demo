{# Resources/views/Symptom/listSymptom.html.twig #}

{% extends 'MockBundle:Default:navigationPage.html.twig' %}

{% block title %}{{ parent() }} | View symptoms{% endblock %}

{% block pageTitle %}View symptoms{% endblock %}

{% block navigation %}
    <ul class="nav nav-list">
        <li class="nav-header">Symptoms</li>
        <li><a href="{{ path('healthsystem_symptom_add') }}">Add symptom</a></li>
        <li><a href="{{ path('healthsystem_symptom') }}">View symptoms</a></li>
        <li class="divider"></li>
        <li class="nav-header">Other</li>
        <li><a href="{{ path('healthsystem_nurse') }}">Nurses</a></li>
        <li><a href="{{ path('healthsystem_doctor') }}">Doctors</a></li>
        <li><a href="{{ path('healthsystem_patient') }}">Patients</a></li>
        <li><a href="{{ path('healthsystem_medicalhistory') }}">Medical Histories</a></li>
        <li><a href="{{ path('healthsystem_appointment') }}">Appointments</a></li>
        <li><a href="{{ path('healthsystem_bill') }}">Bills</a></li>
        <li><a href="{{ path('healthsystem_illness') }}">Illnesses</a></li>
        <li><a href="{{ path('healthsystem_treatment') }}">Treatments</a></li>
    </ul>
{% endblock %}

{% block contents %}
    <table class="table table-hover table-bordered">
        <thead>
            <tr>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for symptom in symptoms %}
                <tr>
                    <td>{{ symptom.getName() }}</td>
                    <td>
                        <a href="{{ path('healthsystem_symptom_edit', {'name': symptom.getName()}) }}">Edit</a>
                        <a href="{{ path('healthsystem_symptom_delete', {'name': symptom.getName()}) }}">Delete</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
