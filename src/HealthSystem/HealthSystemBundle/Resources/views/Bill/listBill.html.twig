{# Resources/views/Bill/listBill.html.twig #}

{% extends 'MockBundle:Default:navigationPage.html.twig' %}

{% block title %}{{ parent() }} | View bills{% endblock %}

{% block pageTitle %}View bills{% endblock %}

{% block navigation %}
    <ul class="nav nav-list">
        <li class="nav-header">Bills</li>
        <li><a href="{{ path('healthsystem_bill_add') }}">Add bill</a></li>
        <li><a href="{{ path('healthsystem_bill') }}">View bills</a></li>
        <li class="divider"></li>
        <li class="nav-header">Other</li>
        <li><a href="{{ path('healthsystem_nurse') }}">Nurses</a></li>
        <li><a href="{{ path('healthsystem_doctor') }}">Doctors</a></li>
        <li><a href="{{ path('healthsystem_patient') }}">Patients</a></li>
        <li><a href="{{ path('healthsystem_symptom') }}">Symptoms</a></li>
        <li><a href="{{ path('healthsystem_medicalhistory') }}">Medical Histories</a></li>
        <li><a href="{{ path('healthsystem_appointment') }}">Appointments</a></li>
        <li><a href="{{ path('healthsystem_illness') }}">Illnesses</a></li>
        <li><a href="{{ path('healthsystem_treatment') }}">Treatments</a></li>
    </ul>
{% endblock %}

{% block contents %}
    <table class="table table-hover table-bordered">
        <thead>
            <tr>
                <th>AppointmentId</th>
                <th>Date</th>
                <th>Amount</th>
                <th>Purpose</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for bill in bills %}
                <tr>
                    <td>{{ bill.getAppointmentId() }}</td>
                    <td>{{ bill.getDate() | date('d-M-Y') }}</td>
                    <td>{{ bill.getAmount() }}</td>
                    <td>{{ bill.getPurpose() }}</td>
                    <td>
                        <a href="{{ path('healthsystem_bill_edit', {'id': bill.getAppointmentId().getId()}) }}">Edit</a>
                        <a href="{{ path('healthsystem_bill_delete', {'id': bill.getAppointmentId().getId()}) }}">Delete</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
